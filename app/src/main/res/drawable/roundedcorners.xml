<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#E3F2FD"
        android:endColor="#BBDEFB"
        android:angle="45" />

    <!-- Rounded corners -->
    <corners
        android:radius="16dp" />

    <!-- Stroke (border) -->
    <stroke
        android:width="2dp"
        android:color="#2196F3" />

    <!-- Padding inside the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <!-- Shadow (only works with API level 28+) -->
    <shadow
        android:color="#66000000"
        android:radius="4dp" />
</shape>
