<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="1000dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/CustomerDesignImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy"
            />

        <TextView
            android:id="@+id/CustomerDesignName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CustomerDesignImage"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@id/favorites_btn"
            android:layout_marginEnd="45dp"
            android:layout_marginStart="10dp"
            android:text="Design Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/favorites_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_favorite_border_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="8dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>