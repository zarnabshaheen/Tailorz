<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Design Image -->
        <ImageView
            android:id="@+id/ivDesign"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Design Image"
            android:src="@drawable/imagenotfound"
            android:background="@android:color/darker_gray"
            android:padding="4dp"
            android:elevation="4dp"
            android:layout_marginBottom="8dp"/>

        <!-- Row Layout for Design Name & Order Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Design Name -->
            <TextView
                android:id="@+id/tvDesignName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Design Name"
                android:textSize="16sp"
                android:fontFamily="@font/poppin_regular"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="6dp"/>

            <!-- Order Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:padding="8dp"
                android:fontFamily="@font/poppin_regular"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="12dp"
                android:backgroundTint="#518EF8"
                android:textColor="@color/white"
               />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
